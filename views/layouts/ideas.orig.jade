    style(type='text/css').
      /* CSS used here will be applied after bootstrap.css */
      html, body {
        height: 100%;
        overflow: hidden;
      }
      .container-fluid.content {
        padding-top: 50px;
        height: 100%;
      }
      .container-fluid.content>.row {
        height: 100%;
      }
      .mainview, .navview, .subview {
        height: 100%;
        overflow: auto;
      }
      .navview, .subview {
        background-color: #eee;
      }
      @media (max-width: 767px) {
        .mainview, .navview, .subview {
          height: auto;
        }
      }

  body
    .navbar.navbar-inverse.navbar-fixed-top(role='navigation')
      .container-fluid
        .navbar-header
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='#') Navbar
        .navbar-collapse.collapse
          form.navbar-form.navbar-right(role='form')
            .form-group
              input.form-control(type='text', placeholder='Email')
            .form-group
              input.form-control(type='password', placeholder='Password')
            button.btn.btn-success(type='submit') Sign in
        // /.navbar-collapse
    .container-fluid.content
      // Example row of columns
      .row
        .col-sm-2.navview
          h2 Navigation
          ul
            li
              span.glyphicon.glyphicon-envelope  Email
            li
              span.glyphicon.glyphicon-pencil  Edit
            li
              span.glyphicon.glyphicon-glass  Party
        .col-sm-7.mainview
          h2 Main View
          #carousel-example-generic.carousel.slide(data-ride='carousel')
            ol.carousel-indicators
              li(data-target='#carousel-example-generic', data-slide-to='0')
              li(data-target='#carousel-example-generic', data-slide-to='1')
              li.active(data-target='#carousel-example-generic', data-slide-to='2')
            .carousel-inner
              .item
                img(data-src='holder.js/900x500/auto/#777:#555/text:First slide', alt='First slide', src='data:image/svg+xml;base64,')
              .item.active.left
                img(data-src='holder.js/900x500/auto/#666:#444/text:Second slide', alt='Second slide', src='data:image/svg+xml;base64,')
              .item.next.left
                img(data-src='holder.js/900x500/auto/#555:#333/text:Third slide', alt='Third slide', src='data:image/svg+xml;base64,')
            a.left.carousel-control(href='#carousel-example-generic', role='button', data-slide='prev')
              span.glyphicon.glyphicon-chevron-left
            a.right.carousel-control(href='#carousel-example-generic', role='button', data-slide='next')
